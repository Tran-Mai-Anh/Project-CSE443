@model Cosmetic.Models.Customer
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var section = ViewBag.Section as string;
    var customer = Model;
    
}

<div class="container-fluid py-5">
    <div class="row">
        <div class="col-lg-3 col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-0">
                    <div class="user-profile-sidebar__header p-4 border-bottom d-flex align-items-center gap-4">
                        <div class="avatar me-3">
                            <img src="~/assets/images/defaultAvatar.jpg" alt="User Avatar" class="rounded-circle" width="60" height="60">
                        </div>
                        <div>
                            <h6 class="mb-2 fw-bold">@customer.Name</h6>
                            <small class="text-muted">@customer.Email</small>
                        </div>
                    </div>
                    <div class="user-profile-sidebar__menu">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item user-profile-sidebar__menu-item active">
                                <a href="javascript:;" class="d-flex align-items-center text-decoration-none gap-4" onclick="loadUserSection('customerProfile')">
                                    <i class="fas fa-user me-3"></i>
                                    <span>My Profile</span>
                                </a>
                            </li>
                            <li class="list-group-item user-profile-sidebar__menu-item">
                                <a href="javascript:;" class="d-flex align-items-center text-decoration-none text-body gap-4" onclick="loadUserSection('customerOrder')">
                                    <i class="fas fa-shopping-bag me-3"></i>
                                    <span>My Orders</span>
                                </a>
                            </li>
                            <li class="list-group-item user-profile-sidebar__menu-item">
                                <a href="javascript:;" class="d-flex align-items-center text-decoration-none text-body gap-4" onclick="loadUserSection('customerAddress')">
                                    <i class="fas fa-map-marker-alt me-3"></i>
                                    <span>My Shipping Addresses</span>
                                </a>
                            </li>
                            <li class="list-group-item user-profile-sidebar__menu-item">
                                <a href="javascript:;" class="d-flex align-items-center text-decoration-none text-danger gap-4">
                                    <i class="fas fa-sign-out-alt me-3"></i>
                                    <span>Logout</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-9 col-md-8" id="customerAllInformation">
            @if (!string.IsNullOrEmpty(section))
            {
                @await Component.InvokeAsync(section)
            }
        </div>
    </div>
</div>
